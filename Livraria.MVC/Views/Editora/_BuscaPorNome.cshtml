@model IEnumerable<Livraria.MVC.ViewModels.EditoraViewModels>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sigla)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Autores)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
               
                <td>
                    @Html.DisplayFor(modelItem => item.Sigla)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Autores)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.EditoraId }) |
                    @Html.ActionLink("Details", "Details", new { id = item.EditoraId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.EditoraId })
                </td>
            </tr>

        }
    </tbody>

</table>
